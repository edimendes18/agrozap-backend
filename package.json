const express = require('express');
const bodyParser = require('body-parser');
const axios = require('axios');
const { GoogleGenerativeAI } = require("@google/generative-ai");
require('dotenv').config();

const app = express();
app.use(bodyParser.json());

// --- PEGAR AS CHAVES DO AMBIENTE ---
// O Railway vai preencher isso sozinho com as chaves que vamos configurar depois
const PORT = process.env.PORT || 3000;
const VERIFY_TOKEN = process.env.VERIFY_TOKEN;
const WHATSAPP_TOKEN = process.env.WHATSAPP_TOKEN;
const PHONE_NUMBER_ID = process.env.PHONE_NUMBER_ID;
const GOOGLE_API_KEY = process.env.GOOGLE_API_KEY;

// Configurar a InteligÃªncia do Google
const genAI = new GoogleGenerativeAI(GOOGLE_API_KEY || "chave_faltando");
const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash"});

// --- FUNÃ‡ÃƒO QUE PENSA (IA) ---
async function perguntarParaIA(textoUsuario) {
  if (!GOOGLE_API_KEY) return "âš ï¸ Erro: Falta a chave do Google no Railway.";

  try {
    // Aqui damos a personalidade ao robÃ´
    const prompt = `
      VocÃª Ã© o AgroZap, um agrÃ´nomo virtual especialista em CafÃ©.
      Responda de forma curta, tÃ©cnica mas amigÃ¡vel (use emojis).
      Se perguntarem de veneno, diga que nÃ£o pode receitar e mande procurar um agrÃ´nomo.
      Pergunta do produtor: "${textoUsuario}"
    `;
    
    const result = await model.generateContent(prompt);
    const response = await result.response;
    return response.text();
  } catch (error) {
    console.error("Erro na IA:", error);
    return "Desculpe companheiro, minha inteligÃªncia travou momentaneamente.";
  }
}

// --- ROTA 1: O WHATSAPP VERIFICA SE ESTAMOS ONLINE ---
app.get('/webhook', (req, res) => {
  const mode = req.query['hub.mode'];
  const token = req.query['hub.verify_token'];
  const challenge = req.query['hub.challenge'];

  if (mode === 'subscribe' && token === VERIFY_TOKEN) {
    console.log("âœ… ConexÃ£o verificada!");
    res.status(200).send(challenge);
  } else {
    res.sendStatus(403);
  }
});

// --- ROTA 2: RECEBER MENSAGENS ---
app.post('/webhook', async (req, res) => {
  const body = req.body;

  if (body.object) {
    if (body.entry && body.entry[0].changes && body.entry[0].changes[0].value.messages) {
      const message = body.entry[0].changes[0].value.messages[0];
      const from = message.from; // Quem mandou
      const type = message.type; // Texto, audio, imagem...

      // Marcar como lido (para nÃ£o ficar bolinha verde no celular)
      await markAsRead(message.id);

      let resposta = "";

      // 1. SE FOR TEXTO
      if (type === 'text') {
        const texto = message.text.body;
        console.log(`Mensagem recebida de ${from}: ${texto}`);
        
        // Pergunta para o Google
        resposta = await perguntarParaIA(texto);
      } 
      // 2. SE FOR ÃUDIO (SimulaÃ§Ã£o para teste)
      else if (type === 'audio') {
        resposta = "ðŸŽ™ï¸ Recebi seu Ã¡udio! (Nesta versÃ£o de teste eu ainda nÃ£o transcrevo, mas sei que vocÃª mandou Ã¡udio).";
      }
      // 3. OUTROS
      else {
        resposta = "Por enquanto sÃ³ entendo texto, companheiro!";
      }

      // Enviar a resposta de volta no Zap
      await sendWhatsAppMessage(from, resposta);
    }
    res.sendStatus(200);
  } else {
    res.sendStatus(404);
  }
});

// --- FUNÃ‡Ã•ES DE ENVIO ---
async function sendWhatsAppMessage(to, text) {
  try {
    await axios.post(`https://graph.facebook.com/v17.0/${PHONE_NUMBER_ID}/messages`, {
      messaging_product: 'whatsapp',
      to: to,
      text: { body: text },
    }, {
      headers: { 
        'Authorization': `Bearer ${WHATSAPP_TOKEN}`,
        'Content-Type': 'application/json'
      }
    });
  } catch (err) {
    console.error('Erro ao enviar zap:', err.message);
  }
}

async function markAsRead(id) {
  try {
    await axios.post(`https://graph.facebook.com/v17.0/${PHONE_NUMBER_ID}/messages`, {
      messaging_product: 'whatsapp', status: 'read', message_id: id,
    }, { headers: { 'Authorization': `Bearer ${WHATSAPP_TOKEN}` } });
  } catch (e) {}
}

// Ligar o servidor
app.listen(PORT, () => console.log(`AgroZap rodando na porta ${PORT}`));
